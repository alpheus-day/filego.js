{
    "private": true,
    "scripts": {
        "format": "biome check --write .",
        "build": "npm-run-all --sequential build:shared build:node build:js",
        "build:shared": "npm-run-all --parallel build:shared:esm build:shared:cjs build:shared:types",
        "build:shared:esm": "cd ./packages/shared && tsc -p ./tsconfig.esm.json && tsc-alias -p ./tsconfig.esm.json",
        "build:shared:cjs": "cd ./packages/shared && tsc -p ./tsconfig.cjs.json && tsc-alias -p ./tsconfig.cjs.json",
        "build:shared:types": "cd ./packages/shared && tsc -p ./tsconfig.types.json && tsc-alias -p ./tsconfig.types.json",
        "build:node": "npm-run-all --parallel build:node:esm build:node:cjs build:node:types",
        "build:node:esm": "cd ./packages/node && tsc -p ./tsconfig.esm.json && tsc-alias -p ./tsconfig.esm.json",
        "build:node:cjs": "cd ./packages/node && tsc -p ./tsconfig.cjs.json && tsc-alias -p ./tsconfig.cjs.json",
        "build:node:types": "cd ./packages/node && tsc -p ./tsconfig.types.json && tsc-alias -p ./tsconfig.types.json",
        "build:js": "npm-run-all --parallel build:js:esm build:js:cjs build:js:types",
        "build:js:esm": "cd ./packages/js && tsc -p ./tsconfig.esm.json && tsc-alias -p ./tsconfig.esm.json",
        "build:js:cjs": "cd ./packages/js && tsc -p ./tsconfig.cjs.json && tsc-alias -p ./tsconfig.cjs.json",
        "build:js:types": "cd ./packages/js && tsc -p ./tsconfig.types.json && tsc-alias -p ./tsconfig.types.json",
        "test": "npm-run-all --sequential test:shared test:node test:js",
        "test:shared": "cd ./tests/shared && pnpm run build",
        "test:node": "cd ./tests/node && pnpm run test",
        "test:js": "cd ./tests/js && pnpm run test",
        "node": "cd ./examples/node && pnpm run dev",
        "web": "cd ./examples/web && pnpm run dev",
        "": ""
    },
    "devDependencies": {
        "@biomejs/biome": "^1.8.3",
        "@types/node": "^22.2.0",
        "npm-run-all": "^4.1.5",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.5.4"
    }
}
